# ===============================
# Solmemebot Mainnet Pattern Trading Example
# ===============================

# === Pattern Trading Activation ===
PATTERN_LIVE_TRADING_ENABLED=true   # REQUIRED: Set to true to enable pattern-based live trading

# Whale Signal Detection
WHALE_SIGNAL_USDC=50000   # USDC threshold for whale detection (default $50,000)

# Forced Pump Injection
FORCED_PUMP_WAIT_SEC=30   # Seconds to wait for natural volume before forced pump
FORCED_PUMP_SIZE=0.0005   # Size in SOL for forced pump buy

# Adaptive Congestion Control
CONGESTION_THRESHOLD_MS=800   # Block time (ms) threshold for congestion expansion

# --- Solana Node/Wallet ---
QUICKNODE_RPC_URL=https://your-quicknode-mainnet-rpc-url   # REQUIRED: Mainnet endpoint
QUICKNODE_WSS_URL=wss://your-quicknode-mainnet-wss-url     # REQUIRED: Mainnet WebSocket
# For multi-key rotation, use semicolon-separated keys. Example:
# SOLANA_PRIVATE_KEYS="1,2,3,...,64;65,66,67,...,128;..." (each is a full 64-number secret)
SOLANA_PRIVATE_KEY="..." # Comma-separated numbers (default, for single-key mode)
SOLANA_PRIVATE_KEYS="" # Optional: semicolon-separated for multi-key rotation

# Key rotation: Number of trades per key before rotating
KEY_ROTATION_TRADES=3
USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v    # Mainnet USDC mint

# --- Birdeye & Helius ---
BIRDEYE_API_KEY=your_birdeye_api_key
HELIUS_API_KEY=your_helius_api_key

# --- Trading Settings ---
LIVE_MODE=true    # REQUIRED: Set to true for live trading
SIMULATION_MODE=false # REQUIRED: Set to false for real trades
SLIPPAGE_BPS_LIMIT=100  # Max allowed slippage for trades (in basis points)
INITIAL_BALANCE=10000
MAX_POSITION_SIZE=1000
MAX_ACTIVE_POSITIONS=3
MAX_RISK_LEVEL=MEDIUM
AUTO_SAVE=true
DATA_DIRECTORY=./data
SLIPPAGE_TOLERANCE=1
AUTO_TRADE=true
MIN_LIQUIDITY=5000
MAX_LIQUIDITY_PERCENTAGE=5

# --- Token Monitor ---
MIN_LIQUIDITY_USD=10000  # Lowered for mainnet dry-run
MIN_BUYS_5M=5
BUYS_SELLS_RATIO=1.5
TEST_TRADE_AMOUNT=50
CONFIDENCE_THRESHOLD=75

# --- Risk Management ---
MAX_DRAWDOWN_PERCENT=10
MAX_DAILY_LOSS_PERCENT=5
SLIPPAGE_BPS=100
VOLATILITY_THRESHOLD=0.15
PRICE_DEVIATION_THRESHOLD=0.05
MIN_SUCCESS_RATE=0.8

# --- Swap Path Config ---
BASE_MINT=So11111111111111111111111111111111111111112  # Default: SOL mint
TEST_TARGET_TOKEN=  # Fallback SPL token address for dry-run if discovery is empty

# --- Rate Limiting ---
MAX_TRADES_PER_MINUTE=5
MAX_TRADES_PER_HOUR=30
MAX_TRADES_PER_DAY=100

# --- WebSocket ---
WS_URL=wss://public-api.birdeye.so/socket
WS_RECONNECT_DELAY=5000
WS_RECONNECT_ATTEMPTS=5

# --- Price APIs ---
COINGECKO_API_KEY=

# --- Notifications ---
NOTIFICATIONS_ENABLED=true   # REQUIRED: Set to true to enable notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook   # REQUIRED if using Discord
TELEGRAM_BOT_TOKEN=your_telegram_bot_token   # REQUIRED if using Telegram
TELEGRAM_CHAT_ID=your_telegram_chat_id       # REQUIRED if using Telegram
TELEGRAM_API_ID=your_telegram_api_id         # REQUIRED if using Telegram
TELEGRAM_API_HASH=your_telegram_api_hash     # REQUIRED if using Telegram
TELEGRAM_SESSION_STRING=your_telegram_session_string # REQUIRED if using advanced Telegram
LOG_LEVEL=info
NOTIFY_LEVEL=all
NOTIFY_ON_TRADE=true
NOTIFY_ON_ERROR=true
NOTIFY_ON_START=true
NOTIFY_ON_STATUS=false

# --- Misc ---
SAVE_INTERVAL_MINUTES=5

# Notifications
DISCORD_WEBHOOK=your_discord_webhook_url

# Optional Telegram notifications
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash
TELEGRAM_SESSION=your_telegram_session_string
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Debug settings
DEBUG=false
LOG_LEVEL=info

# Sell Criteria
MIN_SELL_LIQUIDITY=25000 # Optional: Sell if liquidity drops below this (e.g., $25k). Defaults to MIN_LIQUIDITY if not set.
MIN_SELL_BUY_RATIO=0.8   # Optional: Sell if 5-min buy ratio drops below this (e.g., 0.8)
STOP_LOSS_PERCENT=-15    # Optional: Sell if 5-min price change is below this % (e.g., -15%)
TAKE_PROFIT_PERCENT=30   # Optional: Sell if 5-min price change is above this % (e.g., +30%)

# --- Pattern Strategy Settings ---
# (Optional: Tune these for your pattern detection logic)
PRICE_CHANGE_THRESHOLD=2        # Minimum price % change for pattern match
VOLUME_MULTIPLIER=2             # Volume spike multiplier for pattern match

# --- Solana Transaction ---
TRANSACTION_CONFIRMATION_TIMEOUT_MS=60000 # Max time (ms) to wait for tx confirmation
TRANSACTION_PRIORITY_FEE_MICRO_LAMPORTS=10000 # Priority fee in micro-lamports

# Remove legacy/unused wallet vars
# SOLANA_RPC_ENDPOINT and WALLET_SECRET_BASE58 are not used in mainnet pattern trading
# Use QUICKNODE_RPC_URL and SOLANA_PRIVATE_KEY above