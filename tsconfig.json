{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "isolatedModules": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"]
  },
  "include": [
    "src",
    "scripts",
    "tests",
    "__tests__",
    "*.ts",
    "testRaydiumProgramAccounts.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
